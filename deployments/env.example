# Docker Compose Environment Variables
# Copy this file to .env in the deployments directory
# cp env.example .env
#
# These variables are used by docker-compose.yml
# Docker Compose automatically loads .env file from the same directory

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gozero_template

# ============================================
# RabbitMQ
# ============================================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ============================================
# Service Environment Variables
# These are passed to the application containers
# ============================================
DATABASE_TYPE=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=gozero_template
DATABASE_SSLMODE=disable

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_VHOST=/

USER_RPC_HOST=user-service:9000

# ============================================
# Zitadel OAuth2 (for API Gateway)
# ============================================
ZITADEL_ISSUER=https://your-zitadel-instance.com
ZITADEL_CLIENT_ID=your-client-id
ZITADEL_CLIENT_SECRET=your-client-secret

